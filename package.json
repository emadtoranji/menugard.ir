{
  "name": "menugard.ir",
  "version": "0.3.0-beta.2",
  "private": false,
  "scripts": {
    "dev": "next dev --port 4501",
    "build": "npm run generate && next build",
    "db-build-migrate": "dotenv -e .env.production -- prisma migrate deploy",
    "db-build-reset": "dotenv -e .env.production -- prisma migrate reset",
    "db-build-seed": "dotenv -e .env.production -- prisma db seed",
    "build-local": "dotenv -e .env.local -- prisma generate && next build",
    "generate": "npx prisma generate",
    "install-omit-dev": "npm install --omit=dev",
    "start": "node server.js",
    "lint": "eslint",
    "update": "npx npm-check-updates -u",
    "db-local-push": "dotenv -e .env.local -- prisma db push",
    "db-local-seed": "dotenv -e .env.local -- prisma db seed",
    "db-local-generate": "dotenv -e .env.local -- prisma generate",
    "db-local-migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db-local-studio": "dotenv -e .env.local -- prisma studio"
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.11.1",
    "@next/env": "16.1.6",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "@prisma/extension-accelerate": "3.0.1",
    "accept-language": "3.0.20",
    "bcryptjs": "3.0.3",
    "dompurify": "3.3.1",
    "dotenv": "17.2.3",
    "i18next": "25.8.4",
    "i18next-browser-languagedetector": "8.2.0",
    "i18next-resources-to-backend": "1.2.1",
    "next": "16.1.6",
    "next-auth": "5.0.0-beta.30",
    "nodemailer": "7.0.13",
    "pg": "8.18.0",
    "qrcode": "1.5.4",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-google-recaptcha-v3": "1.11.0",
    "react-hot-toast": "2.6.0",
    "react-i18next": "16.5.4",
    "react-number-format": "5.4.4"
  },
  "devDependencies": {
    "@types/node": "25.2.1",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.13",
    "babel-plugin-react-compiler": "1.0.0",
    "dotenv-cli": "11.0.0",
    "eslint": "9",
    "eslint-config-next": "16.1.6",
    "prisma": "7.3.0",
    "tsx": "4.21.0"
  }
}
